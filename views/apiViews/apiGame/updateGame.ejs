<% include ../../templates/headTemp.ejs %>
<% include ../../templates/navigationTemp.html %>


<!-- update Player -->
<script language="javascript" type="text/javascript" src="/javascripts/angularApps/updateGame.js"></script>
<div id="updateTeam" ng-app="updateGameEngine">
    <div ng-controller="updateGameController">
		<a href="/gameform"> Back to Game CRUD PAGE</a>
		<br>
		<br>
        <div id="formOneContainer" class="col-md-6 col-sm-6 col-xs-6">
            <form role="form" id="step1a" name="myForm3">
                <div class="form-group">
                    <div class="row"><label>Select team (select one):</label></div>
                    <select size="30"  id="selectedTeamA" class="form-group">
                        <option ng-repeat="team in currentTeams | orderBy: 'team_name'" value ='{{currentTeams.indexOf(team)}}' ng-click="selectTeamFunction(currentTeams.indexOf(team))">{{team.team_name}}</option>
                    </select>
                </div>
            </form>
        </div>

        <div id="formOneContainer" class="col-md-6 col-sm-6 col-xs-6">
            <form role="form" id="step1a" name="myForm3">
                <div class="form-group">
                    <div class="row"><label>Select player (select one):</label></div>
                    <select size="10"  id="selectedTeamA" class="form-group">
                        <option ng-repeat="player in roster | orderBy: 'player_last_name'" value ='{{roster.indexOf(player)}}' ng-click="selectPlayerFunction(roster.indexOf(player))">{{player.player_first_name}} {{player.player_last_name}}</option>
                    </select>
                </div>
            </form>
        </div>

        <div id="formOneContainer" class="col-md-6 col-sm-6 col-xs-6">
            <form role="form" id="step1a" name="myForm3">
                <div class="form-group">
                    <div class="row"><label>Select Game (select one):</label></div>
                    <select size="9"  id="selectedTeamA" class="form-group">
                        <option ng-repeat="game in gamesPlayed | orderBy: 'game_Date'" value ='{{gamesPlayed.indexOf(game)}}' ng-click="selectGameFunction(gamesPlayed.indexOf(game))">{{game.player_Name}} {{game.game_Date}}</option>
                    </select>
                </div>
            </form>
        </div>


        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form id="gameEntryForm">
				<button ng-click="updateGame()">update Game</button>
				<br>
				<br>
                <h2>Player: </h2><input type="text" ng-model="game.player_Name">
                <h2>Game Date: </h2><input type="date" ng-model="game.game_Date">
                <h2>Minutes Played: </h2><input type="text" ng-model="game.minutes_played">
                <h2>Field Goals Made: </h2><input type="text" ng-model="game.FGM">
                <h2>Field Goals Attempted: </h2><input type="text" ng-model="game.FGA">
                <h2>Threes Made: </h2><input type="text" ng-model="game.threes_made">
                <h2>Threes Attempted: </h2><input type="text" ng-model="game.threes_attempted">
                <h2>Freethrows Made: </h2><input type="text" ng-model="game.FTM">
                <h2>Freethrows Attempted: </h2><input type="text" ng-model="game.FTA">
                <h2>Offensive Rebounds: </h2><input type="text" ng-model="game.ORB">
                <h2>Defensive Rebounds: </h2><input type="text" ng-model="game.DRB">
                <h2>Assists: </h2><input type="text" ng-model="game.AST">
                <h2>Steals: </h2><input type="text" ng-model="game.STL">
                <h2>Blocks: </h2><input type="text" ng-model="game.BLK">
                <h2>Turnovers: </h2><input type="text" ng-model="game.TOV">
                <h2>Fouls: </h2><input type="text" ng-model="game.Fouls">
                <h2>Points: </h2><input type="text" ng-model="game.PTS">
                <h2>Plus-Minus: </h2><input type="text" ng-model="game.plusMinus">

                <br>
                <button ng-click="updateGame()">update Game</button>
                <br>
                <a href="/gameform"> Back to Game CRUD PAGE</a>
            </form>
        </div>
    </div>
</div>

<!-- update Player API engine -->
<script language="javascript" type="text/javascript" src="/javascripts/angularApps/updateGame.js"></script>