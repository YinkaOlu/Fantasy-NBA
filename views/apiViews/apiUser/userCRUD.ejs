<% include ../../templates/headTemp.ejs %>
<% include ../../templates/navigationTemp.html %>
<% include ../../templates/adminNav.ejs %>

<script language="javascript" type="text/javascript" src="/javascripts/angularApps/userCRUDManager.js"></script>


<div class="appContainer" ng-app="userCRUDApp">
    <div class="ctrlContainer" ng-controller="userCRUDApp">
        <div class="row userContainer" ng-repeat="user in users">
            <div class="userName col-lg-3 col-md-3 col-sm-3 col-xs-3"><input type="text" ng-model="user.username"></div>
            <div class="userEmail col-lg-3 col-md-3 col-sm-3 col-xs-3"><input type="text" ng-model="user.email"></div>
            <div class="userRole col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <input type="radio" ng-model="user.role" value="basic"> Basic
                <input type="radio" ng-model="user.role" value="administrator"> Admin
                <input type="radio" ng-model="user.role" value="manager"> Manager
                <input type="radio" ng-model="user.role" value="guest"> Guest
            </div>
            <button class="btn btn-sm btn-danger" ng-click="deleteUser(users.indexOf(user))">Delete User</button>
            <button class="btn btn-sm btn-success" ng-click="updateUser(users.indexOf(user))">Save Edit</button>
        </div>

        <br>
        <br>
        <br>

        <div class="userName col-lg-2 col-md-2 col-sm-2 col-xs-2"><input type="text" ng-model="newUser.username"></div>
        <div class="userEmail col-lg-2 col-md-2 col-sm-2 col-xs-2"><input type="text" ng-model="newUser.email"></div>
        <div class="userPassword col-lg-2 col-md-2 col-sm-2 col-xs-2"><input type="text" ng-model="newUser.password"></div>
        <div class="userRole col-lg-2 col-md-2 col-sm-2 col-xs-2">
            <input type="radio" ng-model="user.role" value="basic"> Basic
            <input type="radio" ng-model="user.role" value="administrator"> Admin
            <input type="radio" ng-model="user.role" value="manager"> Manager
        </div>
        <button class="btn btn-lg btn-primary" ng-click="createUser()"> Create User </button>
    </div>
</div>