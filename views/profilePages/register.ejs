<% include ../templates/headTemp.ejs %>
<% include ../templates/navigationTemp.html %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to Fantasy Team</h1>
            <div class="account-wall">
                <img class='profile-img' src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120">
                <form class="form-signin" action="/userProfile/signup" method="post">
                    <input type="text" name="username" class="form-control" placeholder="User Name" autofocus>
                    <input type="text" name="email" class="form-control" placeholder="Email" autofocus>
                    <input type="text" name="password" class="form-control" placeholder="password" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
                    <span class="ui-helper-clearfix"></span>
                </form>
            </div>
            <a href="/fantasyTeam/signup" class="text-center new-account">Register</a>
            <div class="message">
                <%if(message){ %>
                <h1><%- message %></h1>
                <%}%>
            </div>

        </div>
    </div>
</div>